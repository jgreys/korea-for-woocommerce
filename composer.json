{
    "name": "greys/korea-for-woocommerce",
    "description": "WooCommerce Toolkit for Korean use.",
    "homepage": "https://wordpress.org/plugins/korea-for-woocommerce/",
    "type": "wordpress-plugin",
    "license": "GPL-3.0-or-later",
    "prefer-stable": true,
    "minimum-stability": "dev",
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.5",
        "woocommerce/woocommerce-sniffs": "^0.1.0",
        "szepeviktor/phpstan-wordpress": "^0.7.7",
        "php-stubs/woocommerce-stubs": "^5.7",
        "yoast/phpunit-polyfills": "^3.0"
    },
    "config": {
        "platform": {
            "php": "7.4"
        },
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "test": [
            "phpunit"
        ],
        "phpcs": [
            "phpcs -s -p"
        ],
        "phpcs-pre-commit": [
            "phpcs -s -p -n"
        ],
        "phpcbf": [
            "phpcbf -p"
        ],
        "makepot-audit": [
            "wp --allow-root i18n make-pot . --exclude=\".github,.vscode,.wordpress-org,bin,sample-data,node_modules,tests,vendor\" --slug=korea-for-woocommerce"
        ],
        "makepot": [
            "@makepot-audit --skip-audit"
        ]
    },
    "extra": {
        "scripts-description": {
            "test": "Run unit tests",
            "phpcs": "Analyze code against the WordPress coding standards with PHP_CodeSniffer",
            "phpcbf": "Fix coding standards warnings/errors automatically with PHP Code Beautifier",
            "makepot-audit": "Generate i18n/korea-for-woocommerce.pot file and run audit",
            "makepot": "Generate i18n/korea-for-woocommerce.pot file"
        }
    },
    "autoload": {
        "psr-4": {
            "Greys\\WooCommerce\\Korea\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Greys\\WooCommerce\\Korea\\Tests\\": "tests/php/src/"
        }
    }
}
