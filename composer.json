{
	"name": "jgreys/korea-for-woocommerce",
	"description": "WooCommerce Toolkit for Korean use.",
	"homepage": "https://wordpress.org/plugins/korea-for-woocommerce/",
	"type": "wordpress-plugin",
	"license": "GPL-3.0-or-later",
	"prefer-stable": true,
	"minimum-stability": "dev",
	"require-dev": {
		"phpunit/phpunit": "^5.0 || ^7.0",
		"wp-coding-standards/wpcs": "^2.2.1",
		"woocommerce/woocommerce-sniffs": "^0.0.10",
		"squizlabs/php_codesniffer": "^3.5"
	},
	"config": {
	  "platform": {
		"php": "7.1"
	  }
	},
	"scripts": {
    "test": [
      "phpunit"
    ],
    "phpcs": [
      "phpcs -s -p"
    ],
    "phpcs-pre-commit": [
      "phpcs -s -p -n"
    ],
    "phpcbf": [
      "phpcbf -p"
    ],
    "makepot-audit": [
      "wp --allow-root i18n make-pot . --exclude=\".github,.wordpress-org,bin,node_modules,tests,vendor\" --slug=korea-for-woocommerce"
    ],
    "makepot": [
      "@makepot-audit --skip-audit"
    ]
	},
	"extra": {
    "scripts-description": {
      "test": "Run unit tests",
      "phpcs": "Analyze code against the WordPress coding standards with PHP_CodeSniffer",
      "phpcbf": "Fix coding standards warnings/errors automatically with PHP Code Beautifier",
      "makepot-audit": "Generate i18n/woocommerce-gateway-kcp.pot file and run audit",
      "makepot": "Generate i18n/woocommerce-gateway-kcp.pot file"
    }
  }
}
